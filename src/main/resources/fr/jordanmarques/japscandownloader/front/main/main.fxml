<GridPane fx:id="gridPane" alignment="TOP_RIGHT" hgap="10.0" stylesheets="main.css" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.jordanmarques.japscandownloader.front.main.MainController">
   <children>
      <JFXTextField fx:id="nameInput" onKeyReleased="#onNameInputKeyPressed" promptText="Name" GridPane.columnIndex="1" />
      <JFXButton fx:id="downloadButton" disable="true" mnemonicParsing="false" onMouseClicked="#download" prefHeight="27.0" prefWidth="236.0" text="Download" GridPane.rowIndex="8" />
      <JFXButton fx:id="stopButton" disable="true" mnemonicParsing="false" onMouseClicked="#stop" prefHeight="27.0" prefWidth="171.0" text="Stop" GridPane.columnIndex="1" GridPane.rowIndex="8" />
      <ImageView fx:id="infoNameImageView" fitHeight="18.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true" smooth="false" GridPane.halignment="RIGHT">
         <image>
            <Image url="@../../../../../images/info.png" />
         </image>
      </ImageView>
      <JFXProgressBar fx:id="progressBar" prefHeight="21.0" prefWidth="420.0" progress="0.0" GridPane.columnSpan="2" GridPane.rowIndex="10" />
      <Label fx:id="mangaLabel" alignment="CENTER" prefHeight="17.0" prefWidth="233.0" GridPane.rowIndex="9">
         <GridPane.margin>
            <Insets top="30.0" />
         </GridPane.margin></Label>
      <Label fx:id="chapterLabel" alignment="CENTER" prefHeight="17.0" prefWidth="174.0" GridPane.columnIndex="1" GridPane.rowIndex="9">
         <GridPane.margin>
            <Insets top="30.0" />
         </GridPane.margin></Label>
      <JFXButton fx:id="selectChaptersButton" mnemonicParsing="false" onMouseClicked="#selectChapters" prefHeight="26.0" prefWidth="174.0" text="Select Chapters..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
