<GridPane alignment="TOP_RIGHT" hgap="10.0" stylesheets="main.css" vgap="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.jordanmarques.japscandownloader.launcher.front.main.MainController">
   <children>
      <TextField fx:id="prefixInput" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="226.0" text="Prefix (Optional)" GridPane.rowIndex="1" />
      <TextField fx:id="nameInput" GridPane.columnIndex="1" />
      <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="233.0" text="Name" />
      <RadioButton fx:id="full" mnemonicParsing="false" selected="true" text="Full Manga" GridPane.rowIndex="2">
         <toggleGroup>
            <ToggleGroup fx:id="mode" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="range" mnemonicParsing="false" text="Range of chapters" toggleGroup="$mode" GridPane.rowIndex="3" />
      <RadioButton fx:id="chapter" mnemonicParsing="false" text="Specific Chapter" toggleGroup="$mode" GridPane.rowIndex="5" />
      <TextField fx:id="fromInput" prefHeight="27.0" prefWidth="158.0" promptText="From" GridPane.rowIndex="4" />
      <TextField fx:id="toInput" promptText="To" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <TextField fx:id="chapterInput" promptText="Chapter" GridPane.rowIndex="6" />
      <Button mnemonicParsing="false" onMouseClicked="#download" prefHeight="27.0" prefWidth="167.0" text="Download" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      <TextArea fx:id="console" editable="false" prefHeight="200.0" prefWidth="229.0" GridPane.columnSpan="2" GridPane.rowIndex="8" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</GridPane>
